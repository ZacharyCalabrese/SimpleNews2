<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dialog_input_zip_message"
        android:id="@+id/dialog_input_zip_message"
        android:textColor="@color/primary_text"/>

    <EditText
        android:id="@+id/dialog_input_zip_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_input_zip_message_hint"
        android:inputType="number"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dialog_input_country_message"
        android:id="@+id/dialog_input_country_message"
        android:textColor="@color/primary_text"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_input_country_spinner"
        android:entries="@array/countries"
        android:entryValues="@array/countries_values" />

</LinearLayout>