<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/primary_color</item>
    </style>

    <style name="Theme.Settings" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="toolbarStyle">@layout/toolbar</item>
    </style>

</resources>

