<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:panelColorForeground"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        style="?android:attr/preferenceCategoryStyle"
        android:layout_marginTop="@dimen/activity_horizontal_margin_half"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_half"
        android:layout_marginStart="@dimen/activity_horizontal_margin_plus"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewholder_source_preferences_category"
        android:textColor="?colorAccent"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/viewholder_source_preferences_card_view"
        app:cardBackgroundColor="?android:panelColorForeground"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <CheckBox
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewholder_source_preferences_checkbox"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                />

            <TextView
                android:layout_marginStart="@dimen/activity_vertical_margin_half"
                android:layout_marginLeft="@dimen/activity_vertical_margin_half"
                style="?android:attr/preferenceStyle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/viewholder_source_preferences_checkbox"
                android:layout_toLeftOf="@id/viewholder_source_preferences_checkbox"
                android:id="@+id/viewholder_source_preferences_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary" />

            <TextView
                style="?android:attr/preferenceStyle"
                android:layout_alignLeft="@+id/viewholder_source_preferences_title"
                android:layout_alignStart="@+id/viewholder_source_preferences_title"
                android:layout_marginRight="@dimen/activity_vertical_margin_plus"
                android:layout_marginEnd="@dimen/activity_vertical_margin_plus"
                android:layout_marginBottom="@dimen/activity_horizontal_margin_quarter"
                android:layout_below="@+id/viewholder_source_preferences_title"
                android:id="@+id/viewholder_source_preferences_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorSecondary" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


