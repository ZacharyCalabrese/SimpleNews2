<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:panelColorForeground">@android:color/white</item>
        <item name="android:colorBackground">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/text_icons</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="android:panelColorBackground">@color/off_white</item>
        <item name="android:textColorSecondaryInverse">@color/primary_text</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/primary_color</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:panelColorForeground">@color/dark_primary_color_dark</item>
        <item name="android:colorBackground">@color/primary_color_dark</item>
        <item name="colorPrimaryDark">@color/dark_primary_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/dark_primary_color_dark</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/text_icons</item>
        <item name="android:panelColorBackground">@color/panelColorBackground_dark_theme</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="CMOptionsMenu_dark" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/primary_color_dark</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>

